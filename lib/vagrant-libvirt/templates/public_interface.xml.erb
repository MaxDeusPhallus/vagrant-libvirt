<interface type='<%= @type %>'<% if @trust_guest_rx_filters %> trustGuestRxFilters='yes'<% end %> <%if @type == 'hostdev'%> managed='yes'<% end %> >
  <% if @mac %>
  <mac address='<%= @mac %>'/>
  <% end %>
  <% if @type == 'direct'%>
  <source dev='<%= @device %>' mode='<%= @mode %>'/>
  <model type='<%=@model_type%>'/>
  <% elsif !@portgroup.nil? %>
  <source network='<%=@network_name%>' portgroup='<%=@portgroup%>'/>
  <model type='<%=@model_type%>'/>
  <% else %>
  <source bridge='<%=@device%>'/>
  <model type='<%=@model_type%>'/>
  <% end %>
  <% if @ovs %>
  <virtualport type='openvswitch'/>
  <% end %>
</interface>
